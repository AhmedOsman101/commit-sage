{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "run": "deno run main.ts",
    "compile-dev": "deno compile -A -o $HOME/scripts/bin/commit-sage main.ts",
    "release-windows": "deno compile -A -o bin/windows-x64/commit-sage --target x86_64-pc-windows-msvc main.ts",
    "release-macos-x64": "deno compile -A -o bin/macos-x64/commit-sage --target x86_64-apple-darwin main.ts",
    "release-macos-arm64": "deno compile -A -o bin/macos-arm64/commit-sage --target aarch64-apple-darwin main.ts",
    "release-linux-x64": "deno compile -A -o bin/linux-x64/commit-sage --target x86_64-unknown-linux-gnu main.ts",
    "release-linux-arm64": "deno compile -A -o bin/linux-arm64/commit-sage --target aarch64-unknown-linux-gnu main.ts"
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt",
    "axios": "npm:axios@^1.8.4"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  }
}
